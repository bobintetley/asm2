$VAR species SPECIES$
\end_layout

\begin_layout LyX-Code
$VAR broughtinafter DATE The date the animals were brought in after$
\end_layout

\begin_layout LyX-Code
AnimalName, DateBroughtIn
\end_layout

\begin_layout LyX-Code
FROM animal
\end_layout

\begin_layout LyX-Code
